<Window x:Class="Text2UML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="586" Width="851">
    <Grid Background="#FFF0F0F0">
		<!-- MENU -->

		<Menu Name="menu" HorizontalAlignment="Stretch" Height="25" VerticalAlignment="Top" Grid.ColumnSpan="2" BorderBrush="#FFB0B0B0" BorderThickness="0,0,0,1">
    		<MenuItem Name="menu_file" Header="File" Height="22">
    			<MenuItem Name="submenu_new" Header="New" HorizontalAlignment="Left" InputGestureText="Ctrl+N"/>
				<MenuItem Name="submenu_open" Header="Open..." HorizontalAlignment="Left" InputGestureText="Ctrl+O"/>
				<MenuItem Name="submenu_save" Header="Save" HorizontalAlignment="Left" InputGestureText="Ctrl+S"/>
				<MenuItem Name="submenu_export" Header="Export..." HorizontalAlignment="Left" InputGestureText="Ctrl+E"/>
    		</MenuItem>
			<MenuItem Name="menu_edit" Header="Edit" Height="22">
				<MenuItem x:Name="submenu_undo" Header="Undo" HorizontalAlignment="Left" InputGestureText="Ctrl+Z"/>
				<MenuItem x:Name="submenu_redo" Header="Redo" HorizontalAlignment="Left" InputGestureText="Ctrl+Y"/>
			</MenuItem>
			<MenuItem Name="menu_options" Header="Options" Height="22">
				<MenuItem x:Name="submenu_lang" Header="Language" HorizontalAlignment="Left">
					<MenuItem x:Name="submenu_lang_en" Header="English" HorizontalAlignment="Left"/>
					<MenuItem x:Name="submenu_lang_fr" Header="French" HorizontalAlignment="Left"/>
				</MenuItem>
			</MenuItem>
			<MenuItem Name="menu_help" Header="?" Height="22"/>
    	</Menu>


		<Grid Margin="0,0,0,30">
		
			<Grid.RowDefinitions>
				<RowDefinition Height="25"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition MinWidth="200"/>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition MinWidth="200" />
			</Grid.ColumnDefinitions>
			
			<Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" Margin="5,5,0,5" Background="#FFF0F0F0">
				<TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
					<TabItem Header="Diagram 1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
						
					</TabItem>
					<TabItem Header="Diagram 2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
						
					</TabItem>
					<TabItem Header="Diagram 3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
						
					</TabItem>
				</TabControl>
			</Grid>
			<GridSplitter Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" ResizeDirection="Columns" Height="Auto" Width="5" HorizontalAlignment="Stretch" Margin="0" Name="GridSplitter1" />
			<Grid Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" Margin="0,5,5,5" Background="#FFF0F0F0">
				<TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
					<TabItem Header="Native language" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition/>
								<RowDefinition Height="22"/>
							</Grid.RowDefinitions>
							<TextBox AcceptsReturn="True" Grid.Row="0" TextWrapping="Wrap" Text="Write native text here" Margin="5" VerticalScrollBarVisibility="Auto"/>
							<StackPanel Orientation="Horizontal" Grid.Row="1">
								<Button Content="Process" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,0,0,0"/>
								<Button Content="Open file..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,0,0,0"/>
							</StackPanel>
						</Grid>
					</TabItem>
					<TabItem Header="Pseudo-code" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition/>
								<RowDefinition Height="22"/>
							</Grid.RowDefinitions>
							<TextBox AcceptsReturn="True"  Grid.Row="0" TextWrapping="Wrap" Text="Write pseudo-code here" Margin="5" VerticalScrollBarVisibility="Auto"/>
							<StackPanel Orientation="Horizontal" Grid.Row="1">
								<Button Content="Process" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,0,0,0"/>
								<Button Content="Open file..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,0,0,0"/>
							</StackPanel>
						</Grid>
					</TabItem>
				</TabControl>
			</Grid>
			

		</Grid>

		<StatusBar HorizontalAlignment="Stretch" Height="30" VerticalAlignment="Bottom" BorderBrush="#FFB0B0B0" BorderThickness="0,1,0,0">
			<Label Content="Status bar"/>
		</StatusBar>
	</Grid>
	
</Window>
