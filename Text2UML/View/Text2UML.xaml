<Window x:Class="Text2UML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WinForms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        Title="Text2UML" Height="600" Width="1143" Icon="logo 1.png" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="OpenCommand" />
        <CommandBinding Command="Save" Executed="SaveCommand" />
        <CommandBinding Command="SaveAs" Executed="ExportCommand" />
    </Window.CommandBindings>
    <Grid x:Name="grid1" Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="235*"/>
        </Grid.RowDefinitions>

        <!-- MENU -->
        <Menu Name="menu" HorizontalAlignment="Stretch" Height="25" VerticalAlignment="Top" BorderBrush="#FFB0B0B0" BorderThickness="0,0,0,1">
            <MenuItem Name="menu_file" Header="File" Height="22">
                <MenuItem Name="submenu_new" Header="New" InputGestureText="Ctrl+N" Margin="0,0,1,0"/>
                <MenuItem Name="submenu_open" Header="Open..." InputGestureText="Ctrl+O" Margin="0,0,1,0" Command="Open"/>
                <MenuItem Name="submenu_save" Header="Save" InputGestureText="Ctrl+S" Margin="0,0,1,0" Command="Save"/>
                <MenuItem Name="submenu_export" Header="Export..." InputGestureText="Ctrl+E" Margin="0,0,1,0" Command="SaveAs"/>
            </MenuItem>
            <MenuItem Name="menu_edit" Header="Edit" Height="22">
                <MenuItem x:Name="submenu_structures" Header="Manage structures" Margin="0,0,1,0" Click="submenu_structures_Click"/>
            </MenuItem>
            <MenuItem Name="menu_help" Header="?" Height="22">
                <MenuItem x:Name="submenu_help" Header="Help" Margin="0,0,1,0"/>
                <MenuItem x:Name="submenu_about" Header="About" Margin="0,0,1,0"/>
            </MenuItem>
        </Menu>


        <Grid Grid.RowSpan="2" Margin="0,5,0,39">

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="200"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition MinWidth="200" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" Margin="5,5,5,5" Background="#FFF0F0F0">
                <WindowsFormsHost Grid.Row="2" Name="propertyGridHost"/>
            </Grid>
            <GridSplitter Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" ResizeDirection="Columns" Height="Auto" Width="5" HorizontalAlignment="Stretch" Margin="0" Name="GridSplitter1" />
            <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0,5,5,5" Background="#FFF0F0F0" Grid.ColumnSpan="2">
                <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,10,0">
                    <TabItem Header="Native language" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="22"/>
                            </Grid.RowDefinitions>
                            <TextBox x:Name="TB_NativeLanguage" AcceptsReturn="True" AcceptsTab="True" Grid.Row="0" TextWrapping="Wrap" Margin="5" VerticalScrollBarVisibility="Auto" KeyUp="TB_NativeLanguage_KeyUp"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="1">
                                <Button x:Name="BT_Process_NL" Content="Process" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,0,0,0" Click="BT_Process_NL_Click"/>
                                <Button x:Name="BT_Open_NL" Content="Open file..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,0,0,0" Click="BT_Open_NL_Click"/>
                                <Button x:Name="BT_Organize_Shapes" Content="Organize Shapes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" Margin="5,0,0,0" Click="BT_Organize_Shapes_Click"/>
                                <Button x:Name="BT_LoadStructures" Content="Load Structures" HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" Margin="5,0,0,0" Click="BT_LoadStructures_Click"/>
                                <CheckBox x:Name="Is_Auto_Process" Content="Auto Process" Margin="0,0,0,3" Width="92" VerticalAlignment="Bottom" IsChecked="True"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Name="pseudocodeTabItem" Header="Pseudo-code" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="22"/>
                            </Grid.RowDefinitions>
                            <TextBox x:Name="TB_PseudoCode" AcceptsReturn="True" AcceptsTab="True" Grid.Row="0" TextWrapping="Wrap" Margin="5" VerticalScrollBarVisibility="Auto" KeyUp="TB_PseudoCode_KeyUp"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="1">
                                <Button x:Name="BT_Process_PC" Content="Process" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,0,0,0" Click="BT_Process_PC_Click"/>
                                <Button x:Name="BT_Open_PC" Content="Open file..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="5,0,0,0" Click="BT_Open_PC_Click"/>
                                <Button x:Name="BT_Organize_Shapes_Copy" Content="Organize Shapes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" Margin="5,0,0,0" Click="BT_Organize_Shapes_Click"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>


        </Grid>

        <StatusBar HorizontalAlignment="Stretch" Height="39" VerticalAlignment="Bottom" BorderBrush="#FFB0B0B0" BorderThickness="0,1,0,0" Grid.Row="1">
            <Label x:Name="LB_Status" Content="Status bar"/>
        </StatusBar>
    </Grid>

</Window>
